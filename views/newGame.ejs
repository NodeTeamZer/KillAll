<% include header.ejs %>
<div class="container">
<div class="row justify-content-around mt-3">
    <button class="btn grey darken-1 waves-effect waves-light btn-large" id="open-connexion">Connection</button>
    <button class="btn grey darken-1 waves-effect waves-light btn-large" id="open-inscription">Inscription</button>
    <button class="btn grey darken-1 waves-effect waves-light btn-large d-none" id="open-form">Nouvelle partie</button>
</div>
<div class="row mt-4">
    <form action="/combat" method="POST" id="new-champ-form" class="d-none m-auto">
        <div class="input-field">
            <input type="text" id="name" name="user_name" required>
            <label for="name">Nom de votre champion:</label>
        </div>
        <p>Vous avez 15 points à placer selon votre convenance. 1 point minimum et 9 maximum par statistique.</p>
        <div class="input-field mt-5">
		<input id="attack" name="attack_points" type="number" value="5" min="1" max="9">
		<label for="attack">Valeur d'<strong>attaque</strong> de votre champion: </label>
        </div>
        <div class="input-field">
		<input id="defense" name="defense_points" type="number" value="5" min="1" max="9">
		<label for="defense">Valeur de <strong>défense</strong> de votre champion: </label>
        </div>
        <div class="input-field">
		<input id="agility" name="agility_points" type="number" value="5" min="1" max="9">
		<label for="agility">Valeur d'<strong>agilité</strong> de votre champion: </label>
        </div>
    <a class="btn orange darken-3 waves-effect waves-light btn-large" id="boutonPoint">Valider mes points ⚔️</a>
    </form>
    <ul id="characterList"></ul>
    <form id="inscription" class="d-none m-auto">
	<div class="input-field">
		<input type="text" id="loginInscription" required>
		<label for="loginInscription">Choisissez votre identifiant: </label>
	</div>
	<div class="input-field">
		<input type="text" id="passwordInscription" required>
		<label for="passwordInscription">Choisissez votre mot de passe: </label>
	</div>
    <a class="btn deep-orange darken-4 waves-effect waves-light btn-large" id="inscriptionButton">Valider mon inscription</a>
    </form>
    <form id="connexion" class="d-none m-auto">
	<div class="input-field">
		<input type="text" id="login" required>
		<label for="login">Identifiant: </label>
	</div>
	<div class="input-field">
		<label for="password">Mot de passe: </label>
		<input type="text" id="password" required>
	</div>
    <a class="btn deep-orange darken-4 waves-effect waves-light btn-large" id="connexionButton">Au combat!!</a>
    </form>
</div>
    <div id="pointLeft" class="text-center"></div>
</div>
</div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/main.js"></script> 
    </body>
</html>
